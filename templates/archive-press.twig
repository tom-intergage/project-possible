{# This file demonstrates using most of the index.twig template and modifying 
   just a small part. See `search.twig` for an example of another approach #}

{% extends "index.twig" %}

{% block content %}

<section class="pp-text-columns pp-charcoal-bg py-5">
    <div class="container">
            <h3 class="text-center pp-monospace py-4">Project Possible Press</h3>
        <div class="row ">
		{% for post in posts %}
			{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
		{% endfor %}             
        </div>
		{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
    </div>
</section>
	
{% endblock %}