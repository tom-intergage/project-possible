{% extends "base.twig" %}

{% block content %}

<section class="pp-banner pp-banner position-relative pp-article-banner pp-half-height">
<div class="pp-article-banner__image" style="background-image:url(https://projectpossible.co.uk/wp-content/uploads/2019/05/DSC4508.jpg)"></div>
<h3 class="text-center pp-monospace py-4 pp-banner__section-title">Blog</h3>
</section>

<section class="pp-text-columns pp-charcoal-bg py-5">
    <div class="container">
        <div class="row ">
		{% for post in posts %}
			{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
		{% endfor %}             
        </div>
		{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
    </div>
</section>
	
{% endblock %}
